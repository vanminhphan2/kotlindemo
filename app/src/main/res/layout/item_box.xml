<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/item_layout"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_height="@dimen/_50sdp">

    <ImageView android:layout_width="@dimen/_40sdp"
               android:id="@+id/img_ava"
               android:layout_height="match_parent"
               android:layout_marginLeft="@dimen/_5sdp"
               android:scaleType="centerCrop"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:weightSum="2"
                  android:layout_toRightOf="@id/img_ava"
                  android:paddingLeft="@dimen/_10sdp"
                  android:paddingRight="@dimen/_20sdp"
                  android:layout_height="@dimen/_45sdp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@+id/tv_name_box"
                  android:gravity="center_vertical"
                  android:textSize="@dimen/_15sdp"
                  android:textColor="@android:color/black"
                  android:singleLine="true"
                  android:text="day la ten box"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:id="@+id/tv_content"
                  android:textSize="@dimen/_10sdp"
                  android:textColor="@android:color/black"
                  android:singleLine="true"
                  android:text="day la content"/>
    </LinearLayout>

    <View android:layout_width="@dimen/_15sdp"
          android:layout_height="@dimen/_15sdp"
          android:layout_marginRight="@dimen/_10sdp"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:background="@drawable/ic_online_1_green_24dp"/>

</RelativeLayout>