<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/item_layout"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_height="@dimen/_50sdp">

    <ImageView android:layout_width="@dimen/_40sdp"
               android:id="@+id/img_ava"
               android:layout_height="match_parent"
               android:layout_marginLeft="@dimen/_5sdp"
               android:scaleType="centerCrop"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/tv_name_box"
              android:gravity="center_vertical"
              android:textSize="@dimen/_15sdp"
              android:singleLine="true"
              android:maxLength="25"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_toRightOf="@id/img_ava"
              android:textColor="@android:color/black"
              android:text="day la ten user"/>

    <ImageView android:layout_width="@dimen/_35sdp"
               android:id="@+id/img_ib"
               android:layout_height="@dimen/_35sdp"
               android:layout_centerVertical="true"
               android:layout_toLeftOf="@id/ic_online"
               android:layout_marginRight="@dimen/_5sdp"
               android:scaleType="centerCrop"
               android:src="@drawable/logo_splash"/>

    <View android:layout_width="@dimen/_10sdp"
          android:layout_height="@dimen/_10sdp"
          android:id="@+id/ic_online"
          android:layout_marginRight="@dimen/_10sdp"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:background="@drawable/ic_online_1_green_24dp"/>

</RelativeLayout>